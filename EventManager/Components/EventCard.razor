@using EventManager.Models
@inject NavigationManager Navigation

<div class="event-card">
    <h3>@Event.Name</h3>
    <p><strong>Data:</strong> @Event.Date.ToShortDateString()</p>
    <p><strong>Local:</strong> @Event.Location</p>
    <button class="btn btn-primary" @onclick="NavigateToDetails">Ver Detalhes</button>
</div>

@code {
    [Parameter] public EventModel Event { get; set; }

    private void NavigateToDetails()
    {
        Navigation.NavigateTo($"/event-details/{Event.Id}");
    }
}
